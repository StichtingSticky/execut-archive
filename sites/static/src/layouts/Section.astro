---
import Container from '~/components/Container.astro'
import Layout from '~/layouts/Base.astro'

export interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<Layout title={title}>
  <section
    class="fixed inset-0 z-50 flex flex-col overflow-y-scroll bg-subtle-highlight">
    <Container>
      <nav class="my-4 text-center">
        <slot name="previous" />
      </nav>

      <slot />

      <nav class="my-4 text-center">
        <slot name="previous" />
      </nav>
    </Container>
  </section>
</Layout>
