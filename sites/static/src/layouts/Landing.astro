---
import Button from '~/components/Button.astro'
import Footer from '~/components/Footer.astro'
import Menu from '~/components/Menu.astro'
import Navbar from '~/components/Navbar.astro'
import SnackBar from '~/components/SnackBar.astro'

import Layout from '~/layouts/Base.astro'

export interface Props {
  title?: string
}

const { title } = Astro.props as Props
---

<Layout title={title}>
  <SnackBar>
    <a class="block p-2 text-center" href="/app">
      Our app is live! Click here to get up to date information about the event.
    </a>
  </SnackBar>

  <Navbar>
    <a
      class="flex justify-center flex-auto order-first py-4 overflow-x-auto font-mono text-sm leading-relaxed text-center text-white basis-full sm:border-b sm:border-red/20 sm:py-4 sm:text-red lg:order-none lg:mx-0 lg:basis-auto lg:border-0 lg:py-0"
      href="/">
      March 28, 2023
      <span class="mx-2 text-white/60 sm:text-red/40">{'|>'}</span>
      De Kom
    </a>

    <Button
      slot="menu"
      size="medium"
      href="https://pretix.svsticky.nl/execut/2023/">
      Get your ticket!
    </Button>
  </Navbar>

  <Menu />

  <slot />

  <Footer />
</Layout>
